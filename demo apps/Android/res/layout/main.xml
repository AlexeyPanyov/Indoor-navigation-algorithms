<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/RelativeLayout01" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        
        <Button android:id="@+id/location_management_button"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/synchronize"
            android:text="Location management"
            android:textSize="20dp"/>
        
        <Button android:id="@+id/navigation_mode_button"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/navigation"
            android:text="Navigation mode"
            android:textSize="20dp"/>
        
        <Button android:id="@+id/measuring_mode_button"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/measuring"
            android:text="Measuring mode"
            android:textSize="20dp"/>
        
        <Button android:id="@+id/text_mode_button"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/console"
            android:text="Debug mode"
            android:textSize="20dp"/>
        
    </LinearLayout>
    
</RelativeLayout>
